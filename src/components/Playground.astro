---
type Props = {
	files: Record<string, string>
}
import fs from "fs"
import Playground from './Playground';

const fileContents = [
  ...Object.keys(Astro.props.files).map((k) => {
    return {
      name: `src/${k}`,
      code: fs.readFileSync(process.cwd() + '/src/files/'+ Astro.props.files[k], 'utf-8').toString(),
      active: k === Astro.props.active
    }
  }),
]
---

<Playground client:visible files={fileContents}>
</Playground>
