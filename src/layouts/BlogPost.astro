---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { fade } from 'astro:transitions';

type Props = CollectionEntry<'blog'>['data'];

const { title, description } = Astro.props;
---

<html lang="en" class="antialiased">
<head>
	<BaseHead title={title} description={description} />
<body class="flex no-scrollbar flex-col h-full bg-neutral-50 mx-auto max-w-2xl px-4 sm:px-6 lg:px-8 pt-8 pb-16">
<Header/>
<main transition:animate={fade({ duration: '0.4s' })} class="w-full">
	<article class="prose w-full">
		<h1 transition:name={`blog-${title}`} transition:animate={fade({ duration: '0.1s' })}>{title}</h1>
		<hr class="my-2 mb-4" />
		<slot />
	</article>
</main>
</body>
</html>
